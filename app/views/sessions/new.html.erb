<section>
  <header class="page-header">
  <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag '/login' do %>

        <div class="form-group form">
        Email: <%= text_field_tag :email, nil, class: 'form-control' %>
        </div>

        <div class="form-group">
        Password: <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>

        <br>
        <%= submit_tag "Login", class: "btn btn-success" %>
      <% end %>
    </div>  
  </div>

</section>
